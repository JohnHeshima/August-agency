
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Autoriser tout le monde à créer des documents dans la collection "contacts"
    // mais ne permettre à personne de les lire, les mettre à jour ou les supprimer.
    match /contacts/{contactId} {
      allow read, update, delete: if false;
      allow create: if true;
    }

    // Règle par défaut : refuser l'accès à toutes les autres collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
